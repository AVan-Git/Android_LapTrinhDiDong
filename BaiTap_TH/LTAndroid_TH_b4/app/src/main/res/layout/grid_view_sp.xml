<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="208dp"
        android:layout_height="146dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dauchuyendoi_1" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="164dp"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:text="TextViewTextViewTextViewTextViewTextViewTextViewTextView"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgView" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="76dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:numStars="5"
        android:paddingTop="12dp"
        android:rating="5"
        android:theme="@style/RatingBar"
        app:layout_constraintStart_toStartOf="@+id/txtName"
        app:layout_constraintTop_toBottomOf="@+id/txtName" />

    <TextView
        android:id="@+id/txtSoNguoiDanhGia"
        android:layout_width="60dp"
        android:layout_height="34dp"
        android:layout_marginStart="1dp"
        android:padding="5dp"
        android:text="(200)"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ratingBar"
        app:layout_constraintStart_toEndOf="@+id/ratingBar"
        app:layout_constraintTop_toTopOf="@+id/ratingBar"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtGia"
        android:layout_width="90dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:text="120.000 Ä‘"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txtName"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="61dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:text="-39%"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtGia"
        app:layout_constraintStart_toEndOf="@+id/txtGia" />
</androidx.constraintlayout.widget.ConstraintLayout>