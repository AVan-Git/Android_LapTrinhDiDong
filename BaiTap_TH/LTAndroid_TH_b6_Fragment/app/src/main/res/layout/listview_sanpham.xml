<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#D9CEBA"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgid"
        android:layout_width="126dp"
        android:layout_height="110dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/color_removebg_preview" />

    <TextView
        android:id="@+id/txtName_acListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="Nike shoes-discount "
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgid"
        app:layout_constraintTop_toTopOf="@+id/imgid" />

    <TextView
        android:id="@+id/txtDiscout_acListview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="50%"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtName_acListView"
        app:layout_constraintStart_toEndOf="@+id/txtName_acListView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Pls touch to see detail"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtDiscout_acListview"
        app:layout_constraintStart_toStartOf="@+id/txtName_acListView"
        app:layout_constraintTop_toBottomOf="@+id/txtName_acListView" />

</androidx.constraintlayout.widget.ConstraintLayout>